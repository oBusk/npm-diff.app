{
    "extends": [
        "next",
        "next/core-web-vitals",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                },
                "newlines-between": "never"
            }
        ],
        "sort-imports": [
            "error",
            { "ignoreCase": true, "ignoreDeclarationSort": true }
        ]
    },
    "settings": {
        "import": {
            "internal-regex": "^_/"
        }
    }
}
