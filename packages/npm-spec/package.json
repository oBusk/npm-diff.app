{
    "name": "@internal/npm-spec",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "description": "Internal library for NPM package specification resolution",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "npm-package-arg": "^11.0.3",
        "pacote": "^18.0.6",
        "semver": "^7.7.3",
        "validate-npm-package-name": "5.0.0"
    },
    "devDependencies": {
        "@types/npm-package-arg": "^6.1.4",
        "@types/pacote": "^11.1.8",
        "@types/semver": "^7.7.1",
        "@types/validate-npm-package-name": "^4.0.2",
        "typescript": "~5.9.3"
    }
}
