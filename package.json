        "libnpmdiff": "^6.1.4",
        "lucide-react": "^0.560.0",
        "next": "~15.4.10",
        "next-themes": "^0.4.6",
        "npm-package-arg": "^11.0.3",
        "pacote": "^18.0.6",
        "react": "19.2.3",
        "react-diff-view": "^3.3.2",
        "react-dom": "19.2.3",
        "react-use": "^17.6.0",
        "semver": "^7.7.3",
        "tailwind-merge": "^2.6.0",
        "tailwindcss": "^3.4.19",
        "tailwindcss-animate": "^1.0.7",
        "validate-npm-package-name": "5.0.0"
    },
    "devDependencies": {
        "@obusk/eslint-config-next": "^15.6.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^30.0.0",
        "@types/libnpmdiff": "^2.0.3",
        "@types/node": "^24.10.3",
        "@types/npm-package-arg": "^6.1.4",
        "@types/pacote": "^11.1.8",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@types/semver": "^7.7.1",
        "@types/validate-npm-package-name": "^4.0.2",
        "autoprefixer": "^10.4.22",
        "eslint": "^9.39.1",
        "jest-environment-jsdom": "^30.2.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "prettier": "~3.7.4",
        "simple-git-hooks": "^2.13.1",
        "typescript": "~5.9.3"
    },
    "pnpm": {
        "overrides": {
            "@types/react": "19.2.7",
            "@types/react-dom": "19.2.3",
            "next@>=15.4.9 <15.4.10": ">=15.4.10"
        }
